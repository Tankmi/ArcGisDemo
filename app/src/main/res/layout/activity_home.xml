<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title"
        layout="@layout/title_view"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/lin_tab_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_tb_small"
        android:paddingBottom="@dimen/margin_tb_small">

        <LinearLayout
            android:id="@+id/lin_tab_home_choiceness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_choiceness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab1" />

            <TextView
                android:background="@drawable/dialogui_selector_all"
                android:id="@+id/tv_tab_home_choiceness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="首页"
                android:textColor="@color/bg_main_menu_color_sel"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab2" />

            <TextView
                android:id="@+id/tv_tab_home_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="商城"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab1" />

            <TextView
                android:id="@+id/tv_tab_home_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="资讯"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab2" />

            <TextView
                android:id="@+id/tv_tab_home_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="购物车"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab_home_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/back_home_tab1" />

            <TextView
                android:id="@+id/tv_tab_home_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tb_small"
                android:text="我的"
                android:textSize="@dimen/settings_text_size"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line_home"
        style="@style/horizontal_line_style"
        android:layout_above="@id/lin_tab_home" />

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/iv_line_home" />


    <FrameLayout
        android:id="@+id/fl_home_advertising"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>