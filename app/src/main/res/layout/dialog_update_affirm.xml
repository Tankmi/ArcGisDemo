<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_dia_update_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_weight="1"
        android:background="@null"
        android:drawableRight="@drawable/icon_close"
        android:gravity="center"
        android:textColor="@color/text_color_hint"
        android:textSize="@dimen/settings_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_upgrade_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/upgrade_bg"
        android:minHeight="360dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_dialog_update_affirm"
        app:layout_constraintRight_toRightOf="@id/iv_dialog_update_affirm"
        app:layout_constraintTop_toTopOf="@id/iv_dialog_update_affirm" />

    <ImageView
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/iv_dialog_update_affirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_undate_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_font"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="@id/img_upgrade_bottom"
        android:layout_marginTop="@dimen/dp_26"
        app:layout_constraintTop_toBottomOf="@id/btn_dia_update_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_font_update" />

    <TextView
        android:id="@+id/tv_versionName"
        android:background="@drawable/back_bt_15"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_7"
        app:layout_constraintLeft_toLeftOf="@id/img_upgrade_bottom"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/iv_font"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="@id/img_upgrade_bottom"
        app:layout_constraintRight_toRightOf="@id/img_upgrade_bottom"
        app:layout_constraintTop_toBottomOf="@id/iv_dialog_update_affirm">

        <TextView
            android:id="@+id/tv_dialog_update_affirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/sp_14"
            android:lineSpacingMultiplier="1.5"
            app:layout_constraintLeft_toLeftOf="@id/img_upgrade_bottom"
            app:layout_constraintRight_toRightOf="@id/img_upgrade_bottom"
            app:layout_constraintTop_toBottomOf="@id/iv_dialog_update_affirm" />

    </ScrollView>


    <Button
        android:id="@+id/btn_dia_update_affirm"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_weight="1"
        android:background="@drawable/back_bt_15"
        android:gravity="center"
        android:text="立即更新"
        android:textColor="@color/white"
        android:textSize="@dimen/title_right_text_size"
        app:layout_constraintBottom_toBottomOf="@id/img_upgrade_bottom"
        app:layout_constraintLeft_toLeftOf="@id/img_upgrade_bottom"
        app:layout_constraintRight_toRightOf="@id/img_upgrade_bottom" />



</androidx.constraintlayout.widget.ConstraintLayout>